  <vm name="s1" type="lxc" arch="x86_64">
    <filesystem type="cow">filesystems/rootfs_lxc64-cdps</filesystem>
    <if id="1" net="LAN3">
      <ipv4>10.1.3.11/24</ipv4>
    </if>
